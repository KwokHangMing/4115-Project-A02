{% block app_content %}
    <!-- Alex coding here -->
    <div class="container">
        <div class="row">
            <div class="col align-self-start">
                <div class="search-1"></div>
                <form action="/search" method="GET" class="d-flex">
                    <input type="search"
                           name="q"
                           class="form-control me-2"
                           placeholder="Search for anything and everying"/>
                    <div class="col align-self-start>
                        <div>
                            <div class="search-2"></div>
                            <form action="/search" method="GET" class="d-flex">
                                <input type="search"
                                       name="q"
                                       class="form-control me-2"
                                       placeholder="All of Hong Kong">
                                <button class="btn btn-primary" type="submit">Search</button>
                            </form>
                        </div>
                    </div>
                </div>
            </form>
            <!-- Leo coding here -->
        {% endblock %}
{% include "advertise.html.j2" %}
        {% block content %}
            {# <div class="row"> #}
            <div class="container">
                <div class="row">
                    {% for listing in listings %}
                        <div class="col-md-4 mb-4">
                            <div class="card">
                                {% if listing.listing_images %}
                                    <img class="card-img-top"
                                         src="{{ listingimage.data }}"
                                         alt="{{ listing.title }}">
                                {% endif %}
                                <div class="card-body">
                                    <h5 class="card-title">{{ listing.title }}</h5>
                                    <p class="card-text">{{ listing.description }}</p>
                                    <p class="card-text font-weight-bold">${{ listing.price }}</p>
                                    <a href="404" class="btn btn-primary">View Details</a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
            {% include "item.html.j2" %}
        {% endblock %}
