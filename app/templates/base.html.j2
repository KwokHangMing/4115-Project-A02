          crossorigin="anonymous"/>
    <link href="../static/css/navbars.css" rel="stylesheet"/>
    <nav class="navbar navbar-expand-lg navbar-light bg-light navbar-default fs-4">
        <div class="container-fluid">
            <button class="navbar-toggler"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
            </button>
            {# </div> #}
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li class="nav">
                        <nav class="navbar navbar-light bg-light">
                            <div class="container-fluid">
                                <a class="navbar-brand" href="{{ url_for('index') }}">
                                    <img src="https://mweb-cdn.karousell.com/build/carousell-logo-title-2Nnf7YFiNk.svg"
                                         alt=""
                                         width="200"
                                         height="50"
                                         class="d-inline-block align-text-top">
                                </a>
                            </div>
                        </nav>
                    </li>
                    <!--Alex coding here -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle"
                           aria-current="page"
                           href="#"
                           id="navbarDropdown"
                           role="button"
                           data-toggle="dropdown"
                           aria-haspopup="true"
                           aria-expanded="false">{{ _('Electronics') }} </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="nonexistent-page.html">Computers & Tech</a>
                            <a class="dropdown-item" href="nonexistent-page.html">Mobile Phones & Gadgets</a>
                            <a class="dropdown-item" href="nonexistent-page.html">Video Gaming</a>
                          
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle"
                               aria-current="page"
                               href="#"
                               id="navbarDropdown"
                               role="button"
                               data-toggle="dropdown"
                               aria-haspopup="true"
                               aria-expanded="false">{{ _('Fashion') }} </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="nonexistent-page.html">Women's Fashion</a>
                                <a class="dropdown-item" href="nonexistent-page.html">Men's Fashion</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active"
                                   aria-current="page"
                                   href="{{ url_for('luxury') }}">{{ _('Luxury') }}</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active"
                                   aria-current="page"
                                   href="{{ url_for('services') }}">{{ _('Services') }}</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active"
                                   aria-current="page"
                                   href="{{ url_for('cars') }}">{{ _('Cars') }}</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active"
                                   aria-current="page"
                                   href="{{ url_for('property') }}">{{ _('Property') }}</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle"
                                   href="#"
                                   role="button"
                                   data-bs-toggle="dropdown"
                                   aria-expanded="false">{{ _('All Categories') }}</a>
                            </li>
                        </ul>
                    </div>
                    <ul class="nav justify-content-end fs-4">
                        {% if current_user.is_anonymous %}
                            <li class="nav-item">
                                <a href="{{ url_for('register') }}">{{ _('Register') }}</a>
                            </li>
                            <li class="nav-item">
                                <a href="{{ url_for('login') }}">{{ _('Login') }}</a>
                            </li>
                        {% else %}
                        
                        

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle"
                                   type="button"
                                   data-toggle="dropdown"
                                   href="#"
                                   role="button"
                                   aria-haspopup="true"
                                   aria-expanded="false">{{ _('Hi, %(username)s!', username=current_user.username) }}</a>
                                <ul class="dropdown-menu fs-4">
                                    <li>
                                        <a class="dropdown-item"
                                           href="{{ url_for('user', username=current_user.username) }}">Profile</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item"  href="{{ url_for('edit_profile') }}">Settings</a>
                                    </li>
                                      <li>
                                        <a class="dropdown-item"  href="{{ url_for('notifications') }}">Notifications</a> <!-- Alex coding here -->
                                    </li>
                                     <li>
                                        <a class="dropdown-item"  href="{{ url_for('report') }}">Report User</a> <!-- Alex coding here -->
                                    </li>
                                     <li>
                                        <a class="dropdown-item"  href="{{ url_for('review') }}">Review User</a> <!-- Alex coding here -->
                                    </li>

                                    <li>
                                        <a class="dropdown-item"  href="{{ url_for('UserLocation') }}">Location</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item"  href="{{ url_for('logout') }}">Logout</a>
                                    </li>
                                </ul>
                            </li>
                        {% endif %}
                        <ul class="navbar-default">
                            <a class="btn btn-danger btn-lg fs-4"
                               href="{{ url_for('sell') }}"
                               role="button">Sell</a>
                        {% if current_user.is_authenticated and current_user.is_admin %}
                            <a href="{{ url_for('administrator') }}">Admin Panel</a>
                        {% endif %}
                        </ul>
                    </ul>
                </nav>
            {% endblock %}
            {% block content %}
                <div class="container">
                    {% with messages = get_flashed_messages() %}
                        {% if messages %}
                            {% for message in messages %}<div class="alert alert-info" role="alert">{{ message }}</div>{% endfor %}
                        {% endif %}
                    {% endwith %}
                    {# application content needs to be provided in the app_content block #}
                    {% block app_content %}{% endblock %}
                </div>
            {% endblock %}
            {% block scripts %}
                {{ super() }}
                {{ moment.include_moment() }}
                {{ moment.lang(g.locale) }}
            {% endblock %}
