{% extends 'bootstrap/base.html' %}
{% block title %}
    {% if title %}
        {{ title }} - Microblog
    {% else %}
        {{ _('Welcome to Microblog') }}
    {% endif %}
{% endblock %}
{% block navbar %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
          crossorigin="anonymous"/>
    <nav class="navbar navbar-expand-lg navbar-light bg-light navbar-default fs-4">
        <div class="container-fluid">
            {# <div class="navbar-header navbar-fixed-top"> #}
            {# <a class="navbar-brand" href="{{ url_for('index') }}">NOT Microblog</a> #}
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"></button>
            {# </div> #}
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li class="nav">
                    <a class="navbar-brand fs-2" href="{{ url_for('index') }}">NOT Microblog</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link active" aria-current="page" href="{{ url_for('electronics') }}">{{ _('Electronics') }}</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link active" aria-current="page" href="{{ url_for('fashion') }}">{{ _('Fashion') }}</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="{{ url_for('luxury') }}">{{ _('Luxury') }}</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="{{ url_for('services') }}">{{ _('Services') }}</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="{{ url_for('cars') }}">{{ _('Cars') }}</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="{{ url_for('property') }}">{{ _('Property') }}</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle"
                           href="#"
                           role="button"
                           data-bs-toggle="dropdown"
                           aria-expanded="false">{{ _('All Categories') }}</a>
                    </li>
                </ul>
            </div>
            <ul class="nav justify-content-end fs-4">
                {% if current_user.is_anonymous %}
                    <li class="nav-item">
                        <a href="{{ url_for('register') }}">{{ _('Register') }}</a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ url_for('login') }}">{{ _('Login') }}</a>
                    </li>
                {% else %}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle"
                           type="button"
                           data-toggle="dropdown"
                           href="#"
                           role="button"
                           aria-haspopup="true"
                           aria-expanded="false">{{ _('Hi, %(username)s!', username=current_user.username) }}</a>
                        <ul class="dropdown-menu fs-4">
                            <li>
                                <a class="dropdown-item"  href="{{ url_for('user', username=current_user.username) }}">Profile</a>
                            </li>
                            <li>
                                <a class="dropdown-item"  href="{{ url_for('edit_profile') }}">Settings</a>
                            </li>
                            <li>
                                <a class="dropdown-item"  href="{{ url_for('logout') }}">Logout</a>
                            </li>
                        </ul>
                    </li>
                {% endif %}
                <ul class="navbar-default">
                    <a class="btn btn-danger btn-lg fs-4"
                       href="{{ url_for('sell') }}"
                       role="button">Sell</a>
                </ul>
            </ul>
        </div>
    </nav>
{% endblock %}
{% block content %}
    <div class="container">
        {% with messages = get_flashed_messages() %}
            {% if messages %}
                {% for message in messages %}<div class="alert alert-info" role="alert">{{ message }}</div>{% endfor %}
            {% endif %}
        {% endwith %}
        {# application content needs to be provided in the app_content block #}
        {% block app_content %}{% endblock %}
    </div>
{% endblock %}
{% block scripts %}
    {{ super() }}
    {{ moment.include_moment() }}
    {{ moment.lang(g.locale) }}
{% endblock %}
